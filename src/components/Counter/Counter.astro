<div class="astro-counter" data-testid="vanilla-counter">
  <span>Astro counter: <span class="count">1</span></span>
  <button class="increment">+1</button>
</div>

<script is:inline>
  (function() {
    function initCounter() {
      const counter = document.querySelector('.astro-counter');
      if (!counter) return;
      
      const countSpan = counter.querySelector('.count');
      const button = counter.querySelector('.increment');
      let count = 1;

      button.addEventListener('click', () => {
        count++;
        countSpan.textContent = count;
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initCounter);
    } else {
      initCounter();
    }
  })();
</script>

<style>
  .astro-counter {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .astro-counter .increment {
    padding: 0.25rem 0.75rem;
    background-color: #4ecca3;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
  }

  .astro-counter .increment:hover {
    background-color: #3db88f;
  }
</style>
