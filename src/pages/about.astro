---
import Layout from '../layouts/Layout.astro';
import { readFileSync } from 'node:fs';
import { resolve } from 'node:path';
import { Marked } from 'marked';

// Read and parse the README.md file dynamically
const readmePath = resolve(process.cwd(), 'README.md');
const readmeMarkdown = readFileSync(readmePath, 'utf-8');
const marked = new Marked();
const readmeContent = marked.parse(readmeMarkdown);
---

<Layout title="About - Storybook Astro">
  <div class="readme-content" set:html={readmeContent} />
</Layout>

<style>
  .readme-content {
    line-height: 1.6;
  }

  .readme-content :global(h1) {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #1a1a2e;
  }

  .readme-content :global(h2) {
    font-size: 2rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #1a1a2e;
  }

  .readme-content :global(h3) {
    font-size: 1.5rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: #1a1a2e;
  }

  .readme-content :global(p) {
    margin-bottom: 1rem;
    color: #333;
  }

  .readme-content :global(code) {
    background: #f4f4f4;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
  }

  .readme-content :global(pre) {
    background: #1a1a2e;
    color: #e0e0e0;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1rem 0;
  }

  .readme-content :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .readme-content :global(ul),
  .readme-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }

  .readme-content :global(li) {
    margin-bottom: 0.5rem;
    color: #333;
  }

  .readme-content :global(a) {
    color: #4ecca3;
    text-decoration: none;
  }

  .readme-content :global(a:hover) {
    text-decoration: underline;
  }

  .readme-content :global(blockquote) {
    border-left: 4px solid #4ecca3;
    padding-left: 1rem;
    margin: 1rem 0;
    color: #666;
    font-style: italic;
  }

  .readme-content :global(hr) {
    border: none;
    border-top: 1px solid #ddd;
    margin: 2rem 0;
  }

  .readme-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
  }

  .readme-content :global(th),
  .readme-content :global(td) {
    border: 1px solid #ddd;
    padding: 0.75rem;
    text-align: left;
  }

  .readme-content :global(th) {
    background: #f4f4f4;
    font-weight: 600;
  }
</style>
