---
import Header from '../components/Header/Header.astro';
import Footer from '../components/Footer/Footer.astro';

interface Props {
  title?: string;
}

const { title = 'Astro Widgets' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
		line-height: 1.6;
		color: #333;
	}

	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	main {
		flex: 1;
		max-width: 1200px;
		width: 100%;
		margin: 0 auto;
		padding: 2rem 1.5rem;
	}

	h1, h2, h3, h4, h5, h6 {
		line-height: 1.3;
		margin-top: 0;
	}

	h1 {
		font-size: 2.5rem;
		color: #1a1a2e;
	}

	h2 {
		font-size: 2rem;
		color: #1a1a2e;
	}

	p {
		margin: 1rem 0;
	}

	a {
		color: #4ecca3;
		text-decoration: none;
	}

	a:hover {
		text-decoration: underline;
	}
</style>
